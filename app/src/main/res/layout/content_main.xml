<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.ggc.epatter1.morsecodetransmitter.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transmitTextField"
        android:id="@+id/textToTransmitLabel"
        android:background="#ffffff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTransmit"
        android:textSize="50dp"
        android:layout_below="@+id/textToTransmitLabel"
        android:layout_alignParentStart="true"
        android:background="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transmitButton"
        android:id="@+id/transmitButton"
        android:textSize="40dp"
        android:layout_below="@+id/editTextTransmit"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/transmitButton">

        <TextView
            android:layout_width="208dp"
            android:layout_height="142dp"
            android:text="Text to be removed and put inside of frame layout"
            android:id="@+id/flashTextView"
            android:layout_below="@+id/transmitButton"
            android:layout_centerHorizontal="true"
            android:background="#000000"
            android:layout_gravity="center_horizontal|top" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutBtn"
            android:id="@+id/aboutButton"
            android:layout_gravity="center" />
    </FrameLayout>


</RelativeLayout>
